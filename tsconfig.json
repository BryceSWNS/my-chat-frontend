{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "skipLibCheck": true,
  
      "strict": false,
  
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
  
      "jsx": "react-jsx"
    },
  
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  
  